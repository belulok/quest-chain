# ---- shared ----
NODE_ENV=development
SUI_NETWORK=devnet            # devnet | testnet | mainnet
SUI_RPC_URL=https://fullnode.devnet.sui.io:443
NEXT_PUBLIC_SUI_NETWORK=${SUI_NETWORK}
NEXT_PUBLIC_SUI_RPC=${SUI_RPC_URL}
NEXT_PUBLIC_APP_NAME="QuestChain Academy"

# ---- zkLogin ----
NEXT_PUBLIC_ZKLOGIN_PROVIDER_GOOGLE_CLIENT_ID=<google-oauth-client-id>
ZKLOGIN_JWK_URL=https://www.googleapis.com/oauth2/v3/certs   # default

# ---- gas sponsorship ----
SUI_SPONSOR_PRIVATE_KEY=<hex‑encoded ed25519>   # lives ONLY on API service
SHINAMI_API_KEY=<your‑shinami‑key>              # if you outsource gas station

# ---- Redis (Upstash) ----
REDIS_URL=rediss://:<pw>@apn1-upstash.io:12345
REDIS_TLS=true

# ---- API service ----
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000

# ---- optional extras ----
SENTRY_DSN=
OPENAI_API_KEY=              # for AI‑generated quests
